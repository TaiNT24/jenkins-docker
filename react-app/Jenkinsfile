pipeline {
    agent {
        label 'nodejs-slave'
    }
    
    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }
        
        stage('Install Dependencies') {
            steps {
                dir('react-app') {
                    sh 'npm install'
                }
            }
            
        }
        
        stage('Build') {
            steps {
                dir('react-app') {
                    sh 'npm run build'
                }
            }
        }
        
        stage('Test') {
            steps {
                dir('react-app') {
                    sh 'npm test -- --watchAll=false'
                }
            }
        }
        
        stage('Archive') {
            steps {
                dir('react-app') {
                    archiveArtifacts artifacts: 'build/**/*', fingerprint: true
                }
            }
        }
    }
}
